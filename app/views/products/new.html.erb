<h1 class="title">Sell a Product</h1>
  <%= form_with model: @products, local: true do |f| %>
<div class="field">
  <label class="label"<%= f.label :name %></label>
  <input class="input"<%= f.text_field :name %>
</div>
<div class="field">
  <label class="label"<%= f.label :price %></label>
  <input class="input"<%= f.number_field :price %>
</div>
<div class="field">
  <label class="label"<%= f.label :description %></label>
  <input class="input"<%= f.text_field :description %>
</div>
<div class="columns">
  <div class="column">
    <button class="button is-primary" type="submit">Sell Item</button>
    <%= link_to "Back", :back, class: "button is-link is-light" %>
  </div>
</div>
<% end %>