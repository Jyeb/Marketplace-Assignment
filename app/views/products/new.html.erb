<h1>Products#new</h1>
<%= form_with model: @products, local: true do |f| %>
<div>
<%= f.label :name %><%= f.text_field :name %>
</div>
<div>
<%= f.label :price %><%= f.number_field :price %>
</div>
<div>
<%= f.label :description %><%= f.text_field :description %>
</div>
<div>
<%= f.submit "Add product" %>
</div>
<% end %>