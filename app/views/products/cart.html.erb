<h1 class="title text">Shopping Cart</h1>
<% @shopping_cart << @product %>
<% if @shopping_cart.length == 0  %>
  <p>Your Shopping Cart is empty</p>
  <% else %>
    <% @shopping_cart.each do |product| %>
      <div class="displayitem column">
      <header class="card-header">
        <p class="card-header-title text has-text-centered">
          <%= product.name %>
        </p>
      </header>
      <figure class="image">
        <div style="max-width:400px; max-height:400px;">
        <% if product.product_image.attached? %>
          <%= image_tag(product.product_image, style:"width:100%; height: 100%;")  %>
        <% else %>
          <img src="http://lorempixel.com/200/200" alt="Placeholder image">
        <% end%>
        </div>
      </figure>
      <div class="card-content">
        <div class="content">
          <%= product.description %>
        </div>
      </div>
      <footer class="card-footer">
        <li class="card-footer-item"><%= product.price %></li>
        <li class="card-footer-item"> <%= product.rating %></li>
        <li class="card-footer-item"><%=  product.categories[0].name %></li>
      </footer>
    </div>
  <% end %>
  <button class="button is-success"><%= link_to("Buy Now", destroy_path(id: @product.id)) %></button>
<% end %>
