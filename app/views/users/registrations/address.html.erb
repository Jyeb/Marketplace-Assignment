<h2 class="title">Edit Your Address</h2>
<%= form_for(resource_name, url: user_registration_path, method: 'patch') do |f| %>

  <div class="field">
    <label class="label"<%= f.label :country %></label>
    <input class="input"<%= f.text_field :country, autocomplete: "country" %>
  </div>

  <div class="field">
    <label class="label"<%= f.label :street_address %></label>
    <input class="input"<%= f.text_field :street_address, autofocus: true, autocomplete: "street_address" %>
  </div>

  <div class="field">
    <label class="label"<%= f.label :postcode %></label>
    <input class="input"<%= f.number_field :postcode, autofocus: true, autocomplete: "postcode" %>
  </div>

  <div class="field">
    <label class="label"<%= f.label :suburb %></label>
    <input class="input"<%= f.text_field :suburb, autofocus: true, autocomplete: "suburb" %>
  </div>

  <div class="field">
    <label class="label"<%= f.label :state %></label>
    <input class="input"<%= f.text_field :state, autofocus: true, autocomplete: "state" %>
  </div>

  <div class="field">
    <label class="label"<%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i></label>
    <input class="input"<%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="columns">
    <div class="column">
      <button class="button is-primary" type="submit">Update</button>
      <%= link_to "Back", :back, class: "button is-link is-light" %>
    </div>
  </div>
<% end %>
