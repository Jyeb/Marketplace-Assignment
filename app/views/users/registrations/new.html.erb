<% provide(:title, "Sign Up")%>
<h2 class="title has-text-centered">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <label class="label"<%= f.label :name %></label>
    <input class="input"<%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>
  
  <div class="field">
    <label class="label"<%= f.label :email %></label>
    <input class="input"<%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <label class="label"<%= f.label :password %></label>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <input class="input"<%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <label class="label"<%= f.label :password_confirmation %><br />
    <input class="input"<%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="columns">
    <div class="column">
      <button class="button is-primary" type="submit">Sign Up</button>
    </div>
  </div>
<% end %>
